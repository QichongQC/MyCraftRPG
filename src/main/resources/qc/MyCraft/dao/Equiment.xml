<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace指用户自定义的命名空间。 -->
<mapper namespace="qc.MyCraft.dao.Equiment">

    <select id="getEquimentListBySearch" resultType="qc.MyCraft.Models.BaseModels.Equiment" parameterType="Common.Search.EquimentSearchModel">
        select * from Equiment
        <where>
            <if test="etype != null and etype != ''">
                etype = ${etype}
            </if>
            <if test="name != null and name != ''">
               and name like '%${name}%'
            </if>
            <if test="describe != null and describe != ''">
                and `describe` like '%${describe}%'
            </if>
            <if test="achieving != null and achieving != ''">
                and achieving like '%${achieving}%'
            </if>
            <if test="suitIds != null and suitIds.size()>0">
                and
                <foreach collection="suitIds" item="item" open="suitId in(" close=")" separator=",">
                    ${item}
                </foreach>
            </if>
        </where>
        limit ${start} , ${pageSize}
    </select>

    <select id="getRecordCount" resultType="INT">
        select count(*) from Equiment
        <where>
            <if test="etype!=null and etype!=''">
                etype = #{etype}
            </if>
            <if test="name != null and name!=''">
                and name like '%${name}%'
            </if>
            <if test="describe != null and describe!=''">
                and `describe` like '%${describe}%'
            </if>
            <if test="achieving != null and achieving !=''">
                and achieving like '%${achieving}%'
            </if>
        </where>
    </select>


    <update id="editEquiment" parameterType="qc.MyCraft.Models.BaseModels.Equiment">
        update Equiment
        set
            etype=#{etype},
            <if test="picture != null and picture != '' ">
                picture=#{picture},
            </if>
            `name`=#{name},
            `describe`=#{describe},
            achieving=#{achieving},
            richTxt=#{richTxt}
        where id=${id}
    </update>
</mapper>